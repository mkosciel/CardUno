<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="playerScreen.controller.MainScreenController">
   <children>
      <VBox prefHeight="400.0" prefWidth="600.0">
         <children>
            <ImageView fx:id="titleImage" fitHeight="282.0" fitWidth="601.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@images/header.jpg" />
               </image></ImageView>
            <HBox prefHeight="160.0" prefWidth="600.0">
               <children>
                  <TextField fx:id="TextFieldUser" promptText="użytkownik" text="Nick">
                     <HBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </HBox.margin>
                  </TextField>
                  <TextField fx:id="TextFieldAdress" promptText="adres servera" text="192.168.1.3">
                     <HBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </HBox.margin>
                  </TextField>
                  <Button fx:id="ButtonJoin" mnemonicParsing="false" onAction="#JoinButtonAction" prefHeight="25.0" prefWidth="81.0">
                     <HBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </HBox.margin>
                     <graphic>
                        <ImageView fitHeight="54.0" fitWidth="76.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@images/Play-now-Button.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
